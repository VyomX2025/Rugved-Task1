# 1. triple_and function
def triple_and(a, b, c):
    return a and b and c

print("Triple and:", triple_and(True, True, False))


# 2. Sort string and count characters
def sort_and_count(s):
    sorted_s = ''.join(sorted(s))
    count = {}
    for char in sorted_s:
        count[char] = count.get(char, 0) + 1
    return sorted_s, count

print(sort_and_count("banana"))


# 3. Hill number
def is_hill_number(n):
    s = str(n)
    i = 1
    while i < len(s) and s[i] > s[i-1]:
        i += 1
    if i == 1 or i == len(s):
        return False
    while i < len(s) and s[i] < s[i-1]:
        i += 1
    return i == len(s)

print("Hill number:", is_hill_number(12321))


# 4. Selection sort string
def selection_sort_string(s):
    arr = list(s)
    for i in range(len(arr)):
        min_index = i
        for j in range(i+1, len(arr)):
            if arr[j] < arr[min_index]:
                min_index = j
        arr[i], arr[min_index] = arr[min_index], arr[i]
    return ''.join(arr)

print("Selection sort:", selection_sort_string("python"))


# 5. Factorial recursion
def factorial(n):
    if n == 0 or n == 1:
        return 1
    return n * factorial(n-1)

print("Factorial:", factorial(5))


# 6. Anagram
def is_anagram(s1, s2):
    return sorted(s1) == sorted(s2)

print("Anagram:", is_anagram("listen", "silent"))


# 7. Fibonacci
def fibonacci(n):
    a, b = 0, 1
    for _ in range(n):
        print(a, end=" ")
        a, b = b, a + b

print("\nFibonacci:")
fibonacci(10)


# 8. Divide string into equal parts
def divide_string(s, n):
    if len(s) % n != 0:
        print("Cannot divide equally")
        return
    part = s[:n]
    for i in range(0, len(s), n):
        if s[i:i+n] != part:
            print("Pattern not same")
            return
    for i in range(0, len(s), n):
        print(s[i:i+n])

print("\nDivide string:")
divide_string("abcdabcdabcdabcd", 4)


# 9. Caesar cipher
def caesar_cipher(text, shift):
    result = ""
    for char in text:
        if char.isalpha():
            start = ord('A') if char.isupper() else ord('a')
            result += chr((ord(char) - start + shift) % 26 + start)
        else:
            result += char
    return result

print("Caesar Cipher:", caesar_cipher("Hello", 3))

